<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="모아보기"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_basket"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_basket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/best"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_best"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <ImageView
                android:id="@+id/clothes"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_shirt"
                app:layout_constraintStart_toEndOf="@+id/best"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <ImageView
                android:id="@+id/onepiece"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_onepiece"
                app:layout_constraintStart_toEndOf="@+id/clothes"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <ImageView
                android:id="@+id/pants"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_pants"
                app:layout_constraintStart_toEndOf="@+id/onepiece"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <ImageView
                android:id="@+id/skirt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_skirt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/best" />

            <ImageView
                android:id="@+id/outer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_outer"
                android:layout_marginStart="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/skirt"
                app:layout_constraintTop_toBottomOf="@+id/clothes" />

            <ImageView
                android:id="@+id/shooes"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_shooes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/accessories"
                app:layout_constraintTop_toBottomOf="@+id/pants" />

            <ImageView
                android:id="@+id/accessories"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_access"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/outer"
                app:layout_constraintTop_toBottomOf="@+id/onepiece" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="4px"/>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="2dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</layout>