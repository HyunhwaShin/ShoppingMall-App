<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="모아보기"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_basket"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_basket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line_top"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/tv_category" />

            <View
                android:id="@+id/line_top2"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:layout_marginTop="2dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/line_top" />


            <ImageView
                android:id="@+id/btn_best"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_best"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <TextView
                android:id="@+id/tv_best"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:text="베스트"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_best" />

            <ImageView
                android:id="@+id/btn_clothes"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_shirt"
                app:layout_constraintStart_toEndOf="@+id/btn_best"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <TextView
                android:id="@+id/tv_clothes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:text="상의"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_best"
                app:layout_constraintTop_toBottomOf="@+id/btn_clothes" />

            <ImageView
                android:id="@+id/btn_onepiece"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_onepiece"
                app:layout_constraintStart_toEndOf="@+id/btn_clothes"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <TextView
                android:id="@+id/tv_onepiece"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:text="원피스"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_clothes"
                app:layout_constraintTop_toBottomOf="@+id/btn_onepiece" />

            <ImageView
                android:id="@+id/btn_pants"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_pants"
                app:layout_constraintStart_toEndOf="@+id/btn_onepiece"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <TextView
                android:id="@+id/tv_pants"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:text="바지"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_onepiece"
                app:layout_constraintTop_toBottomOf="@+id/btn_pants" />

            <ImageView
                android:id="@+id/btn_skirt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:src="@drawable/ic_skirt"
                app:layout_constraintBottom_toBottomOf="@id/tv_skirt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_best" />

            <TextView
                android:id="@+id/tv_skirt"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="13dp"
                android:text="치마"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_skirt" />

            <ImageView
                android:id="@+id/btn_outer"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_outer"
                app:layout_constraintStart_toEndOf="@+id/btn_skirt"
                app:layout_constraintTop_toBottomOf="@+id/tv_clothes" />

            <TextView
                android:id="@+id/tv_outer"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:layout_marginBottom="13dp"
                android:text="아우터"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_skirt"
                app:layout_constraintTop_toBottomOf="@+id/btn_outer" />

            <ImageView
                android:id="@+id/btn_accessories"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_access"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_outer"
                app:layout_constraintTop_toBottomOf="@+id/tv_onepiece" />

            <TextView
                android:id="@+id/tv_access"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="악세서리"
                android:layout_marginBottom="13dp"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_outer"
                app:layout_constraintTop_toBottomOf="@+id/btn_accessories" />

            <ImageView
                android:id="@+id/btn_shoes"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_shoes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_accessories"
                app:layout_constraintTop_toBottomOf="@+id/tv_pants" />

            <TextView
                android:id="@+id/tv_shoes"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:text="신발"
                android:layout_marginBottom="13dp"
                android:textAlignment="center"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_access"
                app:layout_constraintTop_toBottomOf="@+id/btn_shoes" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="4px"/>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="2dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_grid_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</layout>