<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="모아보기"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_basket"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_basket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:id="@+id/line_top"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="4px"
                app:layout_constraintTop_toBottomOf="@+id/tv_category"/>

            <View
                android:id="@+id/line_top2"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/line_top"/>


            <ImageView
                android:id="@+id/btn_best"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_best"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <ImageView
                android:id="@+id/btn_clothes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="33dp"
                android:src="@drawable/ic_shirt"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/btn_best"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <ImageView
                android:id="@+id/btn_onepiece"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_onepiece"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/btn_clothes"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <ImageView
                android:id="@+id/btn_pants"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_pants"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/btn_onepiece"
                app:layout_constraintTop_toBottomOf="@+id/line_top2" />

            <ImageView
                android:id="@+id/btn_skirt"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_skirt"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_best" />

            <ImageView
                android:id="@+id/btn_outer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_outer"
                android:layout_marginStart="33dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_skirt"
                app:layout_constraintTop_toBottomOf="@+id/btn_clothes" />

            <ImageView
                android:id="@+id/btn_accessories"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_access"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_outer"
                app:layout_constraintTop_toBottomOf="@+id/btn_onepiece" />

            <ImageView
                android:id="@+id/btn_shoes"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_shoes"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_accessories"
                app:layout_constraintTop_toBottomOf="@+id/btn_pants" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="4px"/>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="2dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_grid_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</layout>